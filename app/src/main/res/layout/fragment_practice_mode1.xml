<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <!--toolbar-->
<com.google.android.material.textview.MaterialTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="40sp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:layout_margin="5dp"
    android:fontFamily="sans-serif-black"
    android:text="Practice Mode"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select Specifications"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center"/>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Starting Portfolio"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>

                <ImageButton
                    android:id="@+id/infoBtnPortfolio"
                    android:layout_width="40dp"
                    android:layout_weight="0.2"
                    android:backgroundTint="@color/white"
                    android:layout_height="wrap_content"
                    android:src="@drawable/info"
                    />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_starting_portfolio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:entries="@array/spinnerItems"/>

            </LinearLayout>
            <!--            marketplace-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Marketplace"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:padding="5dp"/>

                    <ImageButton
                        android:id="@+id/infoBtnMarketPlace"
                        android:layout_width="40dp"
                        android:layout_weight="0.2"
                        android:backgroundTint="@color/white"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info"
                        />

                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_marketplace"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:entries="@array/spinnerItems"/>

            </LinearLayout>


            <!--            Timeframe-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Time Frame"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:padding="5dp"/>

                    <ImageButton
                        android:id="@+id/infoBtnTimeFrame"
                        android:layout_width="40dp"
                        android:layout_weight="0.2"
                        android:backgroundTint="@color/white"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info"
                        />

                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_timeframe"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:entries="@array/spinnerItems"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="Gameplay Type"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:padding="5dp"/>

                    <ImageButton
                        android:id="@+id/infoBtnGameType"
                        android:layout_width="40dp"
                        android:layout_weight="0.2"
                        android:backgroundTint="@color/white"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info"
                        />

                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_gameplay_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:entries="@array/spinnerItems_gameplay"
                    />

            </LinearLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/createGameBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellow"
                android:text="Create Game"/>
    </LinearLayout>



</ScrollView>
</LinearLayout>